numChecksF = 0;
numChecksC = 0;
numChecksK = 0;

tempF = 0;
tempC = 0;
tempK = 0;

fprintf('This program converts an input temperature to the other scales of temperature.');
fprintf('The temperature scales used are: Celsius, Fahrenheit, and Kelvin.');

tempCheck = input('Would you like to check a temperature? Y for Yes or N for no', 's');

if tempCheck == 'Y' | tempCheck == 'y'
    tempScale = input('What is your temperature scale? Enter Celsius-C, Kelvin-K, or Fahrenheit-F:', 's');
    temp = input('Please enter the temperature value:');
    
    switch tempScale
        case {'F', 'f'}
            tempF = temp;
            tempC = (tempF - 32) / 1.8;
            tempK = (tempF + 459.67) * (5/9);
            
            fprintf('For the input temperature of %0.3f degree Fahrenheit: \n', tempF);
            fprintf('%0.3f degree Fahrenheit is equal to %0.2f degree Celsius.', tempF, tempC);
            fprintf('%0.3f degree Fehrenheit is equal to %0.3f degree Kelvin', tempF, tempK);
        case {'C', 'c'}
            tempC = temp;
            tempF = tempF * 1.8 + 32;
            tempK = tempC + 273.15;
            
            fprintf('For the input temperature of %0.2f degree Celsius: \n', tempC);
            fprintf('%0.2f degree Celsius is equal to %0.3f degree Fahrenheit.', tempC, tempF);
            fprintf('%0.2f degree Celsius is equal to %0.3f degree Kelvin', tempC, tempK);
            
        case {'K', 'k'}
            tempK = temp;
            tempF = tempK * (9/5) - 459.67;
            tempC = tempK - 273.15;
            
            fprintf('For the input temperature of %0.3f degree Kelvin: \n', tempK);
            fprintf('%0.3f degree Kelvi is equal to %0.2f degree Fahrenheit.', tempK, tempF);
            fprintf('%0.3f degree Fehrenheit is equal to %0.3f degree Kelvin', temKF, tempC);
    end
    
elseif tempCheck == 'N' | tempCheck == 'n'
    fprintf('Thank you for checking:\n');
    fprintf('%d Celsius Scales and %d Fahrenheit Scales and %d Kelvin Scales', numChecksC, numChecksF, numChecksF);
else
    fprintf('Error, please enter Y or N');
end